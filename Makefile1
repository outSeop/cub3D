NAME = cub3D

CC = gcc

CFLAGS = -O3 -Wall -Wextra -Werror -I. -c

SRCS =	init_color.c	\

OBJS = $(SRCS:.c=.o)

all = $(NAME)

%.o: %.c
	$(CC) $(CFLAGS) -Imlx -c $< -o $@

$(NAME): $(OBJS)
	$(CC) -Lmlx -lmlx -framework OpenGL -framework AppKit -o $(NAME)

clean:
	rm -f $(OBJS) libmlx.dylib

fclean: clean
	rm -f $(NAME)

re: fclean $(NAME)

.PHONY: all re clean fclean

